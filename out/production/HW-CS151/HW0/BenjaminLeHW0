import java.util.Scanner;

class Main{
    
    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);


        System.out.println("Input a number between 2 and 10");

        int numberInput = input.nextInt();
        
        

        int placeholder = 0;
        
        int[] container = new int [numberInput];
        
        System.out.println("You entered " + numberInput);
        System.out.println("Please select " + numberInput + " numbers between 0 and 1000");
        
        for (int i = 0; i < container.length; i++){
            int numberInput2 = input.nextInt();
            placeholder += numberInput2;
        }
        
        System.out.println("Your total is: " + placeholder);

    }
}
